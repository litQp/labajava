                  <TableColumn fx:id="c_dataclose" prefWidth="115.968017578125" text="Дата закрытия договора" />
              </columns>
            </TableView>
        <AnchorPane prefHeight="551.0" prefWidth="541.0" styleClass="background" stylesheets="@green.css">
