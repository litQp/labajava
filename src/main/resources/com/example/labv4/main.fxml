                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin></Button>
                        <Button mnemonicParsing="false" onAction="#add" text="Добавить">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin></Button>
                     </children>
                  </HBox>
                  <VBox prefHeight="143.0" prefWidth="417.0">
                     <children>
                  <Label fx:id="l_num" alignment="CENTER" style="&#10;" text="Договор №" textAlignment="CENTER" wrapText="false">
                           <font>
                      <Font size="18.0" fx:id="x1" />
